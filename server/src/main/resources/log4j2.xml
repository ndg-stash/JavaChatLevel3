<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %X{ip} %X{user} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <Console name="Messages">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %X{user}: %msg%n"/>
        </Console>

        <File name="File" fileName="server/src/main/resources/logs/app.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Messages"/>
        </Root>
        <Logger name="eventsLog" level="warn" additivity="false">
            <AppenderRef ref="File"/>
        </Logger>
    </Loggers>
</Configuration>